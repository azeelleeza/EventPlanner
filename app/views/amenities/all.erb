

<table>
  <tr>
    <th>name</th>
    <th>hescription</th>
    <th>price</th>
    <th colspan="2"></th>
  </tr>
  <% Amenity.all.each do |amenity|  %>

  <tr>
    <td><%= link_to amenity.name, amenity_path(amenity) %></td>
    <td><%= amenity.description %></td>
    <td><%= amenity.price_change %></td>
