<% if @amenity.errors.any? %>
<ul class="errors">
  <% @amenity.errors.full_messages.each do |msg|  %>
  <li>
    <%= msg %>
  </li>
  <% end  %>
</ul>
<% end  %>
<%= form_for @amenity do |f| %>
<h2>New Amenity</h2>
<div class="input-field">
  <%= f.text_field :name %>
  <%= f.label :name %>
</div>
  <div class="input-field">
  <%= f.text_area :description, class:"materialize-textarea"%>
  <%= f.label :description %>
</div>
  <div class="input-field inline">

  <i class="material-icons prefix">attach_money</i>
<%= f.text_field :price_in_cents, style:"padding-left: 1em" %><br>
<%= f.label :price %>
</div><br><br>
  <%= f.submit value="Create Amenity", {class: "btn"} %>
<% end %>
