<h1>Locations</h1>

<ul>
  <% @locations.each do |location| %>
  <li>
    <ul><h2><%= link_to location.name, location_path(location) %></h2>
      <li><%= location.description %></li>
      <li><%= location.address %></li>
      <li><%= location.events.pluck(:name).to_sentence %></li>
    </ul>
  <% end  %>
  </li>

</ul>
